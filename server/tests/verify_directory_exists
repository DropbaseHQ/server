import os


def check_directory_structure(path):
    paths_to_check = [
        os.path.join(path, "state.py"),
        os.path.join(path, "context.py"),
        os.path.join(path, "properties.json"),
        os.path.join(path, "scripts"),
    ]

    for path in paths_to_check:
        if not os.path.exists(path):
            return False

    return True
